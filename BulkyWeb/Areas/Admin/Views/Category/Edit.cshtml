@using BulkyBook.Models.Models
@model Category
<div class="card shadow-border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row ">
            <div class="col-12 text-center">
                <h4 class="text-white py-2">EDIT</h4>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* FORM HERE *@
        <form method="post">
            <div class="border p-3  mt-4">
                <div class="row pb-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                        <label asp-for="DisplayOrder" class="ms-2"></label>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    @* to show all validation at one place use this one  *@
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*this may be All or ModelOnly*@
                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn btn-outline-primary form-control">Update Category</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @* FORM HERE *@
    </div>
</div>
@*Client Side Validation *@
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}