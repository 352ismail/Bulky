@using BulkyBook.Models.Models.Products
@model List<Product>
<div class="container pb-5">
    <div class="row pt-4 pb-6">
        <div class="col-6">
            <h4 class="text-primary display-6">PRODUCTS</h4>
        </div>
        <div class="col-6 text-end">
            <h3 class="text-primary">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i>
                    Create new Product
                </a>
            </h3>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            <th>List Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model.OrderBy(x => x.Title))
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Author</td>
                <td>@product.Description</td>
                <td>@product.ListPrice</td>
                <td>@product.Category.Name</td>
                <td>
                    <div class="w-30 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary mx-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-1">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>